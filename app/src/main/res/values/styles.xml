<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--  提交按钮样式  -->
    <style name="button_submit">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_blue_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="style_RadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_contacts_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <declare-styleable name="Keyboard">
        <attr name="xml" format="reference" />
    </declare-styleable>


    <style name="material_edittext">
        <item name="met_floatingLabel">highlight</item>
        <item name="met_floatingLabelAlwaysShown">false</item>
        <item name="met_floatingLabelAnimating">true</item>
        <item name="met_floatingLabelTextSize">14sp</item>
        <item name="met_floatingLabelTextColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
