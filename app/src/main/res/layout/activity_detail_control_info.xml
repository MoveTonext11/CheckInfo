<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_mc_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_mc_info_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="姓 名" />

            <TextView
                android:id="@+id/tv_mc_info_nameIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_name"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_gender"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_name"
                android:layout_marginTop="10dp"
                android:text="性 别" />

            <TextView
                android:id="@+id/tv_mc_info_genderIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_gender"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_nation"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_gender"
                android:layout_marginTop="10dp"
                android:text="民 族" />

            <TextView
                android:id="@+id/tv_mc_info_nationIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_gender"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_nation"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_birthday"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_nation"
                android:layout_marginTop="10dp"
                android:text="出生日期" />

            <TextView
                android:id="@+id/tv_mc_info_birthdayIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_nation"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_birthday"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_organ"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_birthday"
                android:layout_marginTop="10dp"
                android:text="签发机关" />

            <TextView
                android:id="@+id/tv_mc_info_organIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_birthday"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_organ"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_organ"
                android:layout_marginTop="10dp"
                android:text="有效期限" />

            <TextView
                android:id="@+id/tv_mc_info_timeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_organ"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_time"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_mc_info_address"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_time"
                android:layout_marginTop="10dp"
                android:text="住 址" />

            <TextView
                android:id="@+id/tv_mc_info_addressIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_mc_info_time"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_mc_info_address"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/tv_personState"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="@dimen/sp_16"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/tv_mc_info_time"
                android:text="正常"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignTop="@+id/tv_mc_info_address"
                android:minHeight="0dp"
                android:text="人像比对" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_idcard"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="公民身份号码" />

            <TextView
                android:id="@+id/tv_people_idcardIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_idcard"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_homeid"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="户号" />

            <TextView
                android:id="@+id/tv_people_homeidIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_homeid"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_nearoffice"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="服务处所" />

            <TextView
                android:id="@+id/tv_people_nearofficeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_nearoffice"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_live"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="实际居住地（省市县）" />

            <TextView
                android:id="@+id/tv_people_liveIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_live"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_livenow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="实际居住详址" />

            <TextView
                android:id="@+id/tv_people_livenowIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_livenow"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="户籍地址" />

            <TextView
                android:id="@+id/registerIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_register"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_culture"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="文化程度" />

            <TextView
                android:id="@+id/tv_people_cultureIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_culture"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_job"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="职业" />

            <TextView
                android:id="@+id/tv_people_jobIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_job"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_people_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_people_relation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="与户主关系" />

            <TextView
                android:id="@+id/tv_people_relationIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_relation"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_people_marital"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="婚姻状况" />

            <TextView
                android:id="@+id/tv_people_maritalIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_people_marital"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
