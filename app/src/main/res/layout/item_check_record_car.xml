<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="16dp"
            >

            <ImageView
                app:layout_constraintVertical_bias="0.2"
                android:id="@+id/iv_car_record_item_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/icon_bid_tag"/>


            <!--<ImageView-->
                <!--android:id="@+id/iv_car_record_item_photo"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_margin="5dp"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->
                <!--/>-->
            <TextView
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_record_item_gender"
                android:id="@+id/tv_car_record_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="姓名"
                android:singleLine="true"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/tv_car_record_item_name"
                app:layout_constraintLeft_toLeftOf="@+id/tv_car_record_item_name"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_record_item_sfzid"
                android:id="@+id/tv_car_record_item_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="性别"
                android:singleLine="true"
                />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_car_record_item_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_car_record_item_gender"
                app:layout_constraintBottom_toTopOf="@+id/tv_car_record_item_carid"
                android:id="@+id/tv_car_record_item_sfzid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="身份证号"
                />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_car_record_item_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_car_record_item_sfzid"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tv_car_record_item_carid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="车牌号"
                />

            <!--<TextView-->
                <!--android:id="@+id/tv_car_record_item_car_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="车牌类型"-->
                <!--android:textSize="@dimen/sp_16"-->
                <!--app:layout_constraintBottom_toBottomOf="parent"-->
                <!--app:layout_constraintLeft_toLeftOf="@+id/tv_car_record_item_name"-->
                <!--app:layout_constraintTop_toBottomOf="@+id/tv_car_record_item_carid" />-->

            <!--  车辆类别  -->
            <TextView
                android:id="@+id/tv_car_record_item_cllb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="160dp"
                android:text="车辆类别"
                android:textSize="18sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_car_record_item_gender" />

            <TextView
                app:layout_constraintTop_toTopOf="@+id/tv_car_record_item_carid"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tv_car_record_item_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:text="核查时间"
                />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>