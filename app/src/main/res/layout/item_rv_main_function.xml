<?xml version="1.0" encoding="utf-8"?>
<com.anrongtec.cp.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

<android.support.v7.widget.CardView
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_rv_main_function_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/iv_item_rv_main_function_pic"
            android:layerType="software"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            app:layout_constraintTop_toBottomOf="@+id/iv_item_rv_main_function_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_item_rv_main_function_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="11"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
</com.anrongtec.cp.view.SquareLayout>
