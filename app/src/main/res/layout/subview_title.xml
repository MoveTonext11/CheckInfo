<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="start|center_horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_dotBLue"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_detailPersonInfoPosition"
        android:drawableEnd="@drawable/blue_dot_shape" />

    <TextView
        android:id="@+id/tv_detailPersonInfoPosition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="start|center"
        android:text="个人信息"
        android:paddingStart="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_dotBLue" />

</android.support.constraint.ConstraintLayout>
