<?xml version="1.0" encoding="utf-8"?>
<!--  AnJianList页面 人员信息item  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_anjian_list_person_photo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_anjian_list_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text="姓名"
                app:layout_constraintBottom_toTopOf="@+id/tv_anjian_list_person_sfzid"
                app:layout_constraintLeft_toRightOf="@+id/iv_anjian_list_person_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_anjian_list_person_sfzid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                app:layout_constraintBottom_toTopOf="@+id/tv_anjian_list_person_gender"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anjian_list_person_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_anjian_list_person_name" />

            <TextView
                android:id="@+id/tv_anjian_list_person_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="性别"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anjian_list_person_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_anjian_list_person_sfzid" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>