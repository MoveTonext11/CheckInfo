<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.anrongtec.cp.ui.CheckQueryActivity">
    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:layout_alignParentRight="true"
            android:id="@+id/tb"
            android:background="@drawable/but_check_shape"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/check_viewpager"
        android:layout_below="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/check_tab"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/check_tab"
        app:tabBackground="@drawable/cell_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
