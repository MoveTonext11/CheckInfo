<?xml version="1.0" encoding="utf-8"?>
<!--  AnJianList页面 人员信息item  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_anjian_list_car_bid_tag"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/icon_bid_tag"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_anjian_list_car_bid_photo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_anjian_list_car_bid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:singleLine="true"
                android:text="车主姓名"
                app:layout_constraintBottom_toTopOf="@+id/tv_anjian_list_car_bid_sfzid"
                app:layout_constraintLeft_toRightOf="@+id/iv_anjian_list_car_bid_photo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_anjian_list_car_bid_sfzid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车主身份证号"
                app:layout_constraintBottom_toTopOf="@+id/tv_anjian_list_car_bid_cphm"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anjian_list_car_bid_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_anjian_list_car_bid_name" />

            <TextView
                android:id="@+id/tv_anjian_list_car_bid_cphm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="车牌号码"
                app:layout_constraintBottom_toTopOf="@+id/tv_anjian_list_car_bid_lxr"
                app:layout_constraintLeft_toLeftOf="@+id/tv_anjian_list_car_bid_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_anjian_list_car_bid_sfzid" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/tv_anjian_list_car_bid_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_anjian_list_car_bid_cphm"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tv_anjian_list_car_bid_lxr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中标联系人及联系方式"/>

            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_anjian_list_car_bid_name"
                android:id="@+id/tv_anjian_list_car_bid_cllb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆类别"/>



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>